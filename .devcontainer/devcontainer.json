{
  "name": "NemoGB Shiny App",
  "image": "rocker/shiny:latest",
  "workspaceFolder": "/workspaces/nemogb-app",
  
  // Configure tool-specific properties within customizations.
  "customizations": {
    "codespaces": {
      "openFiles": ["R/app.R"]
    },
    "vscode": {
      "settings": {
        "r.rterm.linux": "/usr/local/bin/R",
        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true,
        "editor.wordWrap": "on",
        "editor.formatOnSave": true
      },
      "extensions": [
        "reditorsupport.r",
        "REditorSupport.r-lsp"
      ]
    }
  },
  
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3838],
  
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "echo 'Development environment is ready! Installing R packages...' && R -e 'install.packages(c(\"shiny\", \"shinydashboard\", \"DT\", \"plotly\"), repos=\"http://cran.rstudio.com/\")'"
}
